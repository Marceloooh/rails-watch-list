<h1><%= @list.name %></h1>

<% @list.bookmarks.each do |bookmark|%>
<h2><%= bookmark.movie.title %></h2>
<p><%= bookmark.comment %></>
<%= link_to "Remove", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>

<%= link_to "Add a movie", new_list_bookmark_path(@list) %>
