<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://ctrlr.org/wp-content/uploads/2021/11/fall-movies-index-1628968089.jpg);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container mt-5">
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-flat" %>
  <br>
  <div class="cards">
    <% @list.bookmarks.each do |bookmark|%>
    <div class="card-trip">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
      <div class="card-trip-infos">
        <div>
          <h2><%= bookmark.movie.title%> · <%= bookmark.movie.rating %><span style="color: #ffd100"> ★<span></h2>
          <p class="my-2"><%= bookmark.movie.overview %></p>
          <p style="font-weight: 800;">☛  <%= bookmark.comment %></p>
            <%= link_to "✗ Remove", bookmark_path(bookmark), class: "text-right",method: :delete, data: { confirm: "Are you sure?" } %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
